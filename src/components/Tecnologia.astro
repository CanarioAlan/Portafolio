---
const tecnologias = [
    {nombre: "HTML5", icono: "html5"},
    {nombre: "CSS", icono: "css3"},
    {nombre: "Tailwind CSS", icono: "tailwindcss"},
    {nombre: "SASS", icono: "sass"},
    {nombre: "JavaScript", icono: "javascript"},
    {nombre: "Astro", icono: "astro"},
    {nombre: "PHP", icono: "php"},
    {nombre: "MYSQL", icono: "mysql"},
    // {nombre: "Node.JS", icono: "nodejs"}, 
    // {nombre: "React", icono: "react"}, 
    // {nombre: "TypeScript", icono: "typescript"}, 
    // {nombre: "Laravel", icono: "laravel"},
]

---
<section id="tecnologias">
    <h2 class="text-2xl font-titulo my-8 underline underline-offset-8 decoration-secundario">Mis tecnologias</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 transition-colors  ">
        {tecnologias.map(tech => (
            <div class="flex flex-col items-center gap-2 p-4 bg-primario/25 hover:bg-primario/40 transition-colors rounded-lg hover:animate-bounce">
              <i class={`devicon-${tech.icono}-plain colored text-4xl`}></i>
              <span class="text-text">{tech.nombre}</span>
            </div>
          ))}
    </div>
    
</section>