---
const {titulo, descripcion} = Astro.props;
---
<div class="w-2xs h-[500px] group border-2 border-gray-600 rounded-2xl p-1 hover:border-yellow-200 mx-auto my-2.5 ">
    <h3 class="p-0.5 text-xl group-hover:text-yellow-200">{titulo}</h3>
    <img src="#" alt="Imagen del proyecto" class="w-full h-44 bg-blue-700 my-1">
    <div class="">
        <h4 class="text-lg my-1">Tecnologias</h4>
      <ul class="flex justify-evenly">
        <li><i class='text-2xl bx bxl-html5'></i></li>
        <li><i class='text-2xl bx bxl-javascript' style='color:#ffffff' ></i></li>
        <li><i class='text-2xl bx bxl-php' style='color:#ffffff' ></i></li>
      </ul>
      <div class="h-full">
        <h4 class="border-b-1 border-b-yellow-200 ">Resumen</h4>
        <div>
          <p class="text-start p-1">{descripcion}</p>
        <div class="flex justify-center gap-2.5 mt-2.5">
          <a href="#" class="p-1.5 hover:bg-yellow-200 rounded-lg hover:text-blue-800">GitHub</a>
          <a href="#" class="p-1.5 hover:bg-yellow-200 rounded-lg hover:text-blue-800">Pre Viw</a>
