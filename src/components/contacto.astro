---
let sending = false;
let success = false;
---

<section
  class="w-full mb-7 fade-on-scroll opacity-0 translate-y-8 transition-all duration-1000"
  id="contacto"
>
  <h2
    class="text-2xl my-5 font-titulo underline underline-offset-8 decoration-secundario"
    id="contacto"
  >
    Contacto
  </h2>
  <p id="obligatorio" class="text-text my-2">
    Todos los campos son obligatorios
  </p>
  <form
    id="contact-form"
    class="text-start px-2.5 sm:grid grid-cols-2 grid-rows-3 sm:w-fit sm:h-fit mx-auto gap-2.5"
  >
    <div class="flex flex-col sm:w-2xs">
      <label for="nombre" class="text-2xl">Nombre:</label>
      <input
        type="text"
        name="nombre"
        id="nombre"
        required
        placeholder="Ingrese su nombre"
        class="py-2.5 px-1 border-1 border-gray-400 mt-2.5 rounded-lg"
      />
    </div>
    <div class="flex flex-col">
      <label for="email" class="text-2xl">E-mail:</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Ingrese su email"
        required
        class="py-2.5 px-1 border-1 border-gray-400 mt-2.5 rounded-lg"
      />
    </div>
    <div class="flex flex-col col-span-full">
      <label for="msj" class="text-2xl">Mensaje:</label>
      <textarea
        name="msj"
        id="mensaje"
        required
        placeholder="Ingrese el mensaje, ej: Hola, me gustaria saber mas sobre su trabajo."
        class="h-28 py-2 px-1 border-1 border-gray-400 mt-2.5 rounded-lg"
      ></textarea>
    </div>
    <input
      type="submit"
      value="Enviar"
      id="enviar"
      class="w-full mt-4 py-2.5 text-3xl bg-yellow-200 text-blue-950 col-end-3 sm:h-16 hover:cursor-pointer"
    />
  </form>
</section>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("contact-form");
    const inputs = form?.querySelectorAll("input, textarea");
    const btnEnviar = document.getElementById("enviar");
    const mensajeExito = document.createElement("p");
    const obligatorio = document.getElementById("obligatorio");

    mensajeExito.classList.add(
      "hidden",
      "text-center",
      "bg-green-200",
      "text-green-800",
      "p-2",
      "rounded"
    );

    form?.appendChild(mensajeExito);
    // Expresión regular para validar email
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    // Función para mostrar errores
    const mostrarError = (input: HTMLInputElement, mensaje: string) => {
      let errorSpan = input.nextElementSibling;

      if (input.name === "email" && !emailRegex.test(input.value.trim())) {
        mensaje = "Ingrese un email válido";
      }

      if (
        input.value.trim() === "" ||
        (input.name === "email" && !emailRegex.test(input.value.trim()))
      ) {
        input.classList.add("border-red-500", "bg-red-200", "text-red-600");
        if (!errorSpan) {
          errorSpan = document.createElement("span");
          errorSpan.textContent = mensaje;
          errorSpan.classList.add("text-red-600", "text-sm", "mt-1");
          input.parentNode?.appendChild(errorSpan);
        } else {
          errorSpan.textContent = mensaje;
        }
      } else {
        input.classList.remove(
          "border-red-500",
          "bg-red-200",
          "text-red-600",
          "text-base"
        );
        if (errorSpan) {
          errorSpan.remove();
        }
      }
      validarFormulario();
    };

    // Función para validar si el formulario está completo
    const validarFormulario = () => {
      let valido = true;
      inputs?.forEach((input) => {
        if (
          input.value.trim() === "" ||
          (input.name === "email" && !emailRegex.test(input.value.trim()))
        ) {
          valido = false;
        }
      });
      btnEnviar.disabled = !valido;
      btnEnviar?.classList.toggle("opacity-50", !valido);
      obligatorio?.classList.remove("hidden");
    };

    // Eventos de validación en cada input
    inputs?.forEach((input) => {
      input.addEventListener("input", () =>
        mostrarError(input, "Este campo es obligatorio")
      );
      input.addEventListener("blur", () =>
        mostrarError(input, "Este campo es obligatorio")
      );
    });

    // Evento de envío del formulario
    form?.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = Object.fromEntries(new FormData(form).entries());

      btnEnviar.disabled = true;
      btnEnviar?.classList.add("opacity-50");

      try {
        const res = await fetch("/api/send-email", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
        });

        const data = await res.json();

        if (data.success) {
          alert("✅ Mensaje enviado con éxito");
          form.reset();
        } else {
          alert("❌ Error al enviar el mensaje: " + data.error);
        }
      } catch (err) {
        mensajeExito.textContent = "❌ Error en la conexión con el servidor";
        mensajeExito.classList.remove("hidden");
      } finally {
        setTimeout(() => {
          mensajeExito.classList.add("hidden");
        }, 4000);
        btnEnviar.disabled = false;
        btnEnviar?.classList.remove("opacity-50");
      }
    });
  });
</script>
