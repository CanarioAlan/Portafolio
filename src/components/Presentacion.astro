<h1 class={'titulo-presentacion text-4xl font-bold text-white'}>
  <span class="palabra">Hola!,</span>
  <span class="palabra">Soy</span>
  <span class="palabra text-secundario">Alan</span>
</h1>

<script is:inline>
  const titulo = document.querySelector(".titulo-presentacion");

  if (titulo) {
    titulo.style.opacity = "0";
    titulo.style.transform = "translateY(20px)";
    titulo.style.transition = "opacity 1s ease, transform 1s ease";

    window.addEventListener("load", () => {
      titulo.style.opacity = "1";
      titulo.style.transform = "translateY(0)";
    });
  }
</script>
